<h1>Destination generator</h1>

<script>
        let map;
            const myLatLng = { lat: @Model.de_lat, lng: @Model.de_lng };
            function initMap() {
                map = new google.maps.Map(document.getElementById("map"), {
                    zoom: 5,
                    center: myLatLng,
                    mapId: '1fa7b2a3a97dbf0c',
                });

                new google.maps.Marker({
                    position: myLatLng,
                    map: map,
                    
                });
            }
</script>


